    <din:metadata>
        <din:identifier>DIN-12345-2023</din:identifier>
        <din:title>Retrieval-Augmented Generation Systems: Implementation Guidelines</din:title>
        <din:version>1.0</din:version>
        <din:language>en</din:language>
